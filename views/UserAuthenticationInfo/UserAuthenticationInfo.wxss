.page-container{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.audit-container{
  flex: 1;
  display: flex;
  flex-direction: column;
}

.audit-header{
  text-align: center;
  padding: 34.5px 0 40.5px;
  font-size: 15px;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
}
.audit-img{
  margin-bottom: 14.5px;
}
.audit-img image{
  width: 50px;
  height: 50px;
}
.audit-describe{
  color: #191919FF;
  line-height: 24px;
}
.audit-describe.active{
  color: #3A74ADFF;
}
.audit-status{
  line-height: 24px;
  color: #F0222FFF;
}
.audit-status.active{
  color: #3A74ADFF;
}

.audit-item{
  display: flex;
  padding: 8px 14.5px;
}
.audit-item-title{
  min-width: 100px;
  font-size: 14px;
  color: #454545FF;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
}
.audit-item-text{
  max-width: 254px;
  font-size: 15px;
  color: #191919FF;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
}

.audit-main{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.audit-main .audit-list{
  flex: 1;
}
.audit-main .audit-button{
  height: 50px;
  line-height: 50px;
  background: #E3211FFF;
  color: #FFFFFFFF;
  font-weight: PingFang-SC-Medium;
  font-weight: Medium;
  font-size: 18px;
  text-align: center;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}