/* views/ScreenSidebar/ScreenSidebar.wxss */


.productNav{
  display: flex;
  flex-direction: row;

}
.left{
  width: 25%;
  font-size: 30rpx; 
  
}
.left view{
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.selected{
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}
.right{
  width:75%;
  margin: 0;
}
swiper{
  height: 500px;
}

.contents > view{
  padding:14px 31px;
  font-size: 30rpx;
  font-weight: 500;
  color: #191919;
  border-bottom: 1px solid #EEEEEE;
}

.btn{
width: 376rpx;
height: 100rpx;
font-size: 30rpx;
font-weight: bold;
color: #FFFFFF;
float: right;
text-align: center;
line-height: 92rpx;

}